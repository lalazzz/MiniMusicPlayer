<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.mialearningdroid.minimusicplayer.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:layout_marginTop="14dp"
        android:textSize="38dp"
        android:textColor="@android:color/holo_orange_light"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:src="@drawable/art"
        android:layout_below="@+id/textview"/>

    <Button
        android:id="@+id/pausebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:text="||" />

    <Button
        android:id="@+id/playbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pausebutton"
        android:layout_toEndOf="@+id/pausebutton"
        android:layout_toRightOf="@+id/pausebutton"
        android:background="@color/colorAccent"
        android:text=">" />


    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:id="@+id/seekBar"
        android:layout_alignRight="@+id/playbutton"
        android:layout_alignEnd="@+id/playbutton"
        android:layout_below="@+id/pausebutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
